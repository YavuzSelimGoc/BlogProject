@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/CoreBlogTema/js/jquery-2.2.3.min.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Register Now</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @*<form  method="post">*@
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">First name</label>

                            @*<input type="text" class="form-control" name="WriterName" id="validationDefault01" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control"})
                            @Html.ValidationMessageFor(x => x.WriterName)
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail</label>
                            @*<input type="email" class="form-control" name="WriterMail" id="validationDefault02" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterMail)
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            @*<input type="password" name="WriterPassword" class="form-control" id="password1" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterPassword)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Resim</label>
                            @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterPassword)
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">KayıtOl</button>
                    <p>
                        <a href="#" id="popup">Koşulları Kabul Ediyorum</a>
                    </p>
                    @*</form>*@
                }

            </div>
        </div>
    </div>
    <script>
        $('#popup').click(function () {
            swal("Hello world!");
        });

    </script>
</section>
